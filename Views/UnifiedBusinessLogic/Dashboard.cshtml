@model HospitalAssetTracker.Models.UnifiedDashboardViewModel
@{
    ViewData["Title"] = "Unified Business Logic Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2">Unified Business Logic Dashboard</h1>
                    <p class="text-muted">Comprehensive overview of IT Asset Management operations</p>
                </div>
                <div>
                    <button class="btn btn-outline-primary me-2" onclick="refreshDashboard()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <span class="text-muted small">Last updated: <span id="lastUpdated">@DateTime.Now.ToString("HH:mm")</span></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Section -->
    @if (Model.PendingAlerts.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Pending Alerts</h6>
                    <div class="row">
                        @foreach (var alert in Model.PendingAlerts.Take(3))
                        {
                            <div class="col-md-4">
                                <div class="d-flex align-items-center">
                                    <i class="@alert.Icon me-2 text-@alert.ColorClass"></i>
                                    <div>
                                        <strong>@alert.Title</strong><br>
                                        <small>@alert.Message</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Summary Cards Row -->
    <div class="row mb-4">
        <!-- Assets Summary Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Assets</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AssetSummary.TotalAssets</div>
                            <div class="text-xs text-success">
                                <i class="fas fa-check-circle"></i> @Model.AssetSummary.ActiveAssets Active
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-desktop fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Requests Summary Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Pending Requests</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RequestSummary.PendingRequests</div>
                            <div class="text-xs text-info">
                                <i class="fas fa-clock"></i> @Model.RequestSummary.TotalRequests Total
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Procurement Summary Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Procurement Value</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.ProcurementSummary.TotalPOValue.ToString("N0")</div>
                            <div class="text-xs text-warning">
                                <i class="fas fa-shopping-cart"></i> @Model.ProcurementSummary.PendingPOs Pending
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Summary Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Low Stock Items</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.InventorySummary.LowStockItems</div>
                            <div class="text-xs text-danger">
                                <i class="fas fa-exclamation-triangle"></i> Needs Attention
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Analytics Row -->
    <div class="row mb-4">
        <!-- Asset Status Chart -->
        <div class="col-xl-6 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Asset Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="assetStatusChart" style="height: 320px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Metrics -->
        <div class="col-xl-6 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Performance Metrics</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="progress-circle" data-percentage="@Math.Round(Model.PerformanceMetrics.AssetUtilizationRate, 0)">
                                    <span class="progress-text">@Math.Round(Model.PerformanceMetrics.AssetUtilizationRate, 0)%</span>
                                </div>
                                <small class="text-muted">Asset Utilization</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-center">
                                <div class="progress-circle" data-percentage="@Math.Round(Model.PerformanceMetrics.MaintenanceComplianceRate, 0)">
                                    <span class="progress-text">@Math.Round(Model.PerformanceMetrics.MaintenanceComplianceRate, 0)%</span>
                                </div>
                                <small class="text-muted">Maintenance Compliance</small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="metric-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Avg Request Processing</span>
                                <span class="badge bg-info">@Math.Round(Model.PerformanceMetrics.AverageRequestProcessingTime, 1)h</span>
                            </div>
                            <div class="metric-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>Procurement Efficiency</span>
                                <span class="badge bg-success">@Math.Round(Model.PerformanceMetrics.ProcurementEfficiency, 1)%</span>
                            </div>
                            <div class="metric-item d-flex justify-content-between align-items-center py-2">
                                <span>User Satisfaction</span>
                                <span class="badge bg-primary">@Model.PerformanceMetrics.UserSatisfactionScore/10</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Recent Activities -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Activities</h6>
                    <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="activity-timeline">
                            @foreach (var activity in Model.RecentActivities.Take(8))
                            {
                                <div class="activity-item d-flex align-items-start mb-3">
                                    <div class="activity-icon me-3">
                                        <i class="@activity.Icon text-@activity.ColorClass"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="activity-content">
                                            <strong>@activity.Action</strong> by @activity.UserName
                                        </div>
                                        <div class="activity-description text-muted small">
                                            @activity.Description
                                        </div>
                                        <div class="activity-time text-muted small">
                                            @activity.Timestamp.ToString("MMM dd, yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-history fa-3x mb-3 opacity-25"></i>
                            <p>No recent activities to display</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & Workflow -->
        <div class="col-xl-4 col-lg-5">
            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var action in Model.AvailableActions.Take(4))
                        {
                            <div class="col-6 mb-3">
                                <a href="@action.ActionUrl" class="btn btn-outline-@action.ColorClass btn-sm w-100 text-start">
                                    <i class="@action.Icon me-2"></i>
                                    <div class="small">@action.Title</div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Workflow Summary -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Workflow Status</h6>
                </div>
                <div class="card-body">
                    <div class="workflow-stats">
                        <div class="stat-item d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span><i class="fas fa-clock text-warning me-2"></i>Pending Approvals</span>
                            <span class="badge bg-warning">@Model.WorkflowSummary.PendingApprovals</span>
                        </div>
                        <div class="stat-item d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span><i class="fas fa-cogs text-info me-2"></i>Active Workflows</span>
                            <span class="badge bg-info">@Model.WorkflowSummary.ActiveWorkflows</span>
                        </div>
                        <div class="stat-item d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span><i class="fas fa-check text-success me-2"></i>Completed Today</span>
                            <span class="badge bg-success">@Model.WorkflowSummary.CompletedToday</span>
                        </div>
                        <div class="stat-item d-flex justify-content-between align-items-center py-2">
                            <span><i class="fas fa-exclamation-circle text-danger me-2"></i>Overdue Items</span>
                            <span class="badge bg-danger">@Model.WorkflowSummary.OverdueItems</span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Actions", "UnifiedBusinessLogic")" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-tasks me-2"></i>View Action Items
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .card.border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .card.border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .card.border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .card.border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    
    .progress-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: conic-gradient(#007bff 0deg, #007bff calc(var(--percentage) * 3.6deg), #e9ecef calc(var(--percentage) * 3.6deg), #e9ecef 360deg);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        position: relative;
    }
    
    .progress-circle::before {
        content: '';
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: white;
        position: absolute;
    }
    
    .progress-text {
        position: relative;
        z-index: 1;
        font-weight: bold;
        font-size: 14px;
    }
    
    .activity-timeline .activity-item {
        padding-left: 0;
    }
    
    .activity-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #f8f9fc;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .chart-area {
        position: relative;
        height: 320px;
    }
    
    .metric-item:last-child {
        border-bottom: none !important;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/unified-dashboard.js"></script>
    <script>
        // Initialize progress circles
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.progress-circle').forEach(circle => {
                const percentage = circle.getAttribute('data-percentage');
                circle.style.setProperty('--percentage', percentage);
            });
            
            // Initialize asset status chart
            initializeAssetChart(@Html.Raw(Json.Serialize(Model.AssetSummary.AssetsByStatus)));
        });
        
        function refreshDashboard() {
            location.reload();
        }
        
        function initializeAssetChart(data) {
            const ctx = document.getElementById('assetStatusChart');
            if (!ctx) return;
            
            const labels = Object.keys(data);
            const values = Object.values(data);
            const colors = ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'];
            
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        data: values,
                        backgroundColor: colors.slice(0, labels.length),
                        borderWidth: 2,
                        borderColor: '#ffffff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        }
    </script>
}
