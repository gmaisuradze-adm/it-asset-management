@model HospitalAssetTracker.Models.Location

@{
    ViewData["Title"] = "Create Location";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3><i class="bi bi-plus-circle"></i> Create New Location</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Building" class="form-label">Building <span class="text-danger">*</span></label>
                            <input asp-for="Building" class="form-control" placeholder="e.g., Main Hospital" required />
                            <span asp-validation-for="Building" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Floor" class="form-label">Floor (Optional)</label>
                            <input asp-for="Floor" class="form-control" placeholder="e.g., 1st, 2nd, Ground" />
                            <span asp-validation-for="Floor" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Room" class="form-label">Room <span class="text-danger">*</span></label>
                        <input asp-for="Room" class="form-control" placeholder="e.g., Room 101, ICU, Emergency" required />
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (Optional)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Additional details about this location"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Location
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Location Guidelines</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="bi bi-check text-success"></i> Use clear, descriptive names</li>
                    <li><i class="bi bi-check text-success"></i> Include building information</li>
                    <li><i class="bi bi-check text-success"></i> Specify floor when applicable</li>
                    <li><i class="bi bi-check text-success"></i> Use room numbers or names</li>
                </ul>
                <hr>
                <p class="text-muted small">
                    Example: Main Hospital - 2nd Floor - Room 205
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
