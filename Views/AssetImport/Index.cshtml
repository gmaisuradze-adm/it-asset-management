@{
    ViewData["Title"] = "Bulk Asset Import";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">
        <i class="fas fa-upload text-primary me-2"></i>
        Bulk Asset Import
    </h1>
    <a asp-action="Index" asp-controller="Assets" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Assets
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Upload CSV File</h5>
            </div>
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-4">
                        <label for="file" class="form-label">Select CSV File <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="file" name="file" accept=".csv" required>
                        <div class="form-text">
                            Maximum file size: 5MB. Only CSV files are supported.
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="validateData" checked>
                            <label class="form-check-label" for="validateData">
                                Validate data before import
                            </label>
                            <div class="form-text">
                                Check this to validate all data before creating assets
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="DownloadTemplate" class="btn btn-outline-primary">
                            <i class="fas fa-download me-1"></i>Download Template
                        </a>
                        <button type="submit" class="btn btn-primary" id="uploadBtn">
                            <i class="fas fa-upload me-1"></i>Upload & Import
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info me-2"></i>Import Guidelines
                </h5>
            </div>
            <div class="card-body">
                <h6 class="fw-bold">Required Fields:</h6>
                <ul class="list-unstyled mb-3">
                    <li><i class="fas fa-check text-success me-2"></i>Asset Tag</li>
                    <li><i class="fas fa-check text-success me-2"></i>Category</li>
                    <li><i class="fas fa-check text-success me-2"></i>Brand</li>
                    <li><i class="fas fa-check text-success me-2"></i>Model</li>
                    <li><i class="fas fa-check text-success me-2"></i>Serial Number</li>
                    <li><i class="fas fa-check text-success me-2"></i>Status</li>
                    <li><i class="fas fa-check text-success me-2"></i>Department</li>
                </ul>

                <h6 class="fw-bold">Valid Categories:</h6>
                <div class="mb-3">
                    <span class="badge bg-secondary me-1">Desktop</span>
                    <span class="badge bg-secondary me-1">Laptop</span>
                    <span class="badge bg-secondary me-1">Server</span>
                    <span class="badge bg-secondary me-1">Network</span>
                    <span class="badge bg-secondary me-1">Printer</span>
                    <span class="badge bg-secondary me-1">Mobile</span>
                    <span class="badge bg-secondary me-1">Other</span>
                </div>

                <h6 class="fw-bold">Valid Statuses:</h6>
                <div class="mb-3">
                    <span class="badge bg-success me-1">Available</span>
                    <span class="badge bg-primary me-1">InUse</span>
                    <span class="badge bg-warning me-1">Maintenance</span>
                    <span class="badge bg-secondary me-1">Retired</span>
                    <span class="badge bg-danger me-1">Disposed</span>
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Important:</strong> Asset tags must be unique. Duplicate tags will cause import errors.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file-csv text-success me-2"></i>CSV Format Example
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>AssetTag</th>
                                <th>Category</th>
                                <th>Brand</th>
                                <th>Model</th>
                                <th>SerialNumber</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Department</th>
                                <th>Location</th>
                                <th>PurchaseDate</th>
                                <th>PurchasePrice</th>
                                <th>Supplier</th>
                                <th>WarrantyExpiryDate</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>AT001</td>
                                <td>Desktop</td>
                                <td>Dell</td>
                                <td>OptiPlex 7070</td>
                                <td>ABC123456</td>
                                <td>Desktop computer</td>
                                <td>Available</td>
                                <td>IT</td>
