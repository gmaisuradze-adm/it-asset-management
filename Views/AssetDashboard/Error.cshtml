@{
    ViewData["Title"] = "Asset Dashboard Error";
}

<div class="container mt-4">
    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Asset Dashboard Error</h4>
        <p>@TempData["ErrorMessage"]</p>
        
        @if (ViewBag.ErrorDetails != null)
        {
            <details>
                <summary style="cursor: pointer;">Technical Details</summary>
                <pre class="mt-2" style="background: #f8f9fa; padding: 1rem; border-radius: 4px; font-size: 0.85rem;">@ViewBag.ErrorDetails</pre>
            </details>
        }
    </div>
    
    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="fas fa-home"></i> Go to Home Dashboard
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Go Back
        </a>
    </div>
</div>
