@page "/Account/Logout"
@model HospitalAssetTracker.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-center">You have been successfully logged out.</p>
                    <div class="text-center">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Login Again
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
